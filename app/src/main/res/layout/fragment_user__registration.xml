<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/smoke"
    tools:context=".Entrance.Registration.User_Registration">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/navyBlue"
                android:text="@string/don_t_have_an_account_ncreate_your_account"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/service" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/smoke"
                    android:background="@drawable/message_shape"
                    android:id="@+id/firstName"
                    android:padding="15dp"
                    android:hint="first name" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/smoke"
                    android:padding="15dp"
                    android:background="@drawable/message_shape"
                    android:id="@+id/middleName"
                    android:hint="middle name" />

            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:background="@drawable/message_shape"
                android:id="@+id/email"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Email" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:background="@drawable/message_shape"
                android:id="@+id/phoneNumber"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Phone Number" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:background="@drawable/message_shape"
                android:id="@+id/createPassword"
                android:padding="15dp"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Create Password" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:background="@drawable/message_shape"
                android:id="@+id/confirmPassword"
                android:padding="15dp"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Confirm Password" />
            <Button
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Sign Up"
                android:backgroundTint="@color/navyBlue"
                android:id="@+id/signUp"
                app:cornerRadius="10dp"
                />
        </LinearLayout>
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/mint_green"/>
    </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>